<Window x:Class="StorageAnalyzer.VisualStorage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VisualStorage" Height="300" Width="500">
      <StackPanel Background="Gray">
        <Label HorizontalAlignment="Left" HorizontalContentAlignment="Center"  FontSize="14" Background="LightGoldenrodYellow" Height="30" FontWeight="Bold" Name="Contentlabel" Width="398" />
        <StackPanel Margin="5" Orientation="Horizontal">
            <Label Content="NumOfFiles :" HorizontalAlignment="Left" HorizontalContentAlignment="Left"  FontSize="10" FontWeight="Bold" Height="25" Name="TotalSpacelabel" Width="80" />
            <TextBox Name="FileNum" Background="LawnGreen" TextAlignment="Center" Height="25" FontSize="10" Width="100" />
            <Label Content="NumOfDirectories :" HorizontalAlignment="Left" HorizontalContentAlignment="Left"  FontSize="10" FontWeight="Bold" Height="25" Name="FreeSpacelabel" Width="100" />
            <TextBox Name="DirNum" Background="LawnGreen" TextAlignment="Center" Height="25" FontSize="10" Width="100" />
        </StackPanel>
        </StackPanel>
    
</Window>
